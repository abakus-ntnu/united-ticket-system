generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Attendees {
  id                     String      @id @default(cuid())
  email                  String   @unique
  name                   String
  photo_consent          Boolean?
  group                  String
  admitted               DateTime?
  active                 Boolean  @default(true)
  email_sent             Boolean  @default(false)
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Attendees {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  name          String
  photo_consent Boolean  @default(false)
  group         String
  admitted      DateTime
  active        Boolean  @default(true)
  email_sent    Boolean  @default(false)
}
